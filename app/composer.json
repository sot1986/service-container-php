{
    "name": "sot/php-test-service-container",
    "description": "A simple PHP service container for testing",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Matteo Presot",
            "email": "matteo.presot@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "symfony/cache": "^6.1",
        "predis/predis": "^2.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "run-phpunit": "vendor/bin/phpunit"
    }
}